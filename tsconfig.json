{
    "compilerOptions": {
      "target": "es2020",                          
      "module": "es2020",
      "moduleResolution":"node",                 
      "lib": ["es2021", "dom"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strictNullChecks" : true,
      "strictFunctionTypes" :true,
      "noEmitOnError":true
    },
    "rules": {
      "triple-equals": true,
      "curly": true,
      "strict-boolean-expressions": true,
      "no-unnecessary-condition": true
    }
  }